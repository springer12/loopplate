{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "classic",
    "removeComments": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "declaration": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    // "noUnusedParameters": true
    "types": [
      "mocha-typescript"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "app/types/loopback-crud.d.ts"
  ]
}
